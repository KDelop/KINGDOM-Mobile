<div class="modal fade" id="demo-modal" tabindex="-1" role="dialog" aria-labelledby="demo-modal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Demo with <%= demo.lead.first_name %></h5>
      </div>
      <div class="modal-body">
        <b>Scheduled at:</b>  <%= demo.start_datetime.strftime('%A %B %e, %Y') %>, <%= demo.duration %>
      </div>
      <div class="modal-footer">
        <% if current_user.zoom_link.present? %>
          <%= link_to 'Send Demo Link Again', demo_send_reminder_path(demo), class: 'btn btn-primary', method: :post %>
        <% else %>
          <span>Please add personal zoom <%= link_to 'here', demo_settings_path %> to send invite to lead.</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
